{
	"include": ["./**/*.ts"],
	"exclude": ["**/node_modules/**/*", "./workspace/**/*"],
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
		"allowSyntheticDefaultImports": true,
		"lib": ["esnext"],
		"sourceMap": true
	}
}
